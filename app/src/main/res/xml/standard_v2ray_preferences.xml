<PreferenceScreen xmlns:app="http://schemas.android.com/apk/res-auto">

    <EditTextPreference
        app:icon="@drawable/ic_social_emoji_symbols"
        app:key="profileName"
        app:title="@string/profile_name"
        app:useSimpleSummaryProvider="true" />

    <PreferenceCategory app:title="@string/proxy_cat">

        <EditTextPreference
            app:icon="@drawable/ic_hardware_router"
            app:key="serverAddress"
            app:title="@string/server_address"
            app:useSimpleSummaryProvider="true" />
        <EditTextPreference
            app:icon="@drawable/ic_maps_directions_boat"
            app:key="serverPort"
            app:title="@string/server_port"
            app:useSimpleSummaryProvider="true" />
        <EditTextPreference
            app:icon="@drawable/ic_baseline_person_24"
            app:key="serverUsername"
            app:title="@string/username"
            app:useSimpleSummaryProvider="true" />
        <EditTextPreference
            app:icon="@drawable/ic_baseline_person_24"
            app:key="serverUserId"
            app:title="@string/uuid"
            app:useSimpleSummaryProvider="true" />
        <EditTextPreference
            app:icon="@drawable/ic_maps_360"
            app:key="serverAlterId"
            app:title="@string/alter_id"
            app:useSimpleSummaryProvider="true" />
        <com.takisoft.preferencex.SimpleMenuPreference
            app:entries="@array/vmess_encryption_entry"
            app:entryValues="@array/vmess_encryption_value"
            app:icon="@drawable/ic_notification_enhanced_encryption"
            app:key="serverEncryption"
            app:title="@string/enc_method"
            app:useSimpleSummaryProvider="true" />
        <com.takisoft.preferencex.SimpleMenuPreference
            app:defaultValue="2"
            app:entries="@array/socks_versions"
            app:entryValues="@array/int_array_3"
            app:icon="@drawable/ic_baseline_nfc_24"
            app:key="serverProtocol"
            app:title="@string/app_version"
            app:useSimpleSummaryProvider="true" />
        <com.takisoft.preferencex.SimpleMenuPreference
            app:entries="@array/xtls_flow_entry"
            app:entryValues="@array/xtls_flow_value"
            app:icon="@drawable/ic_baseline_stream_24"
            app:key="serverFlow"
            app:title="@string/flow"
            app:useSimpleSummaryProvider="true" />
        <com.takisoft.preferencex.SimpleMenuPreference
            app:entries="@array/packet_encoding_entry"
            app:entryValues="@array/packet_encoding_value"
            app:icon="@drawable/baseline_widgets_24"
            app:key="serverPacketEncoding"
            app:title="@string/packet_encoding"
            app:useSimpleSummaryProvider="true" />
        <com.takisoft.preferencex.SimpleMenuPreference
            app:entries="@array/networks_entry"
            app:entryValues="@array/networks_value"
            app:icon="@drawable/ic_baseline_compare_arrows_24"
            app:key="serverNetwork"
            app:title="@string/network"
            app:useSimpleSummaryProvider="true" />
        <com.takisoft.preferencex.SimpleMenuPreference
            app:defaultValue="none"
            app:entries="@array/kcp_quic_headers_entry"
            app:entryValues="@array/kcp_quic_headers_value"
            app:icon="@drawable/ic_baseline_texture_24"
            app:key="serverHeader"
            app:title="@string/header_type"
            app:useSimpleSummaryProvider="true" />
        <com.takisoft.preferencex.SimpleMenuPreference
            app:defaultValue="none"
            app:entries="@array/quic_security_entry"
            app:entryValues="@array/quic_security_value"
            app:icon="@drawable/ic_baseline_security_24"
            app:key="serverQuicSecurity"
            app:title="@string/quic_security"
            app:useSimpleSummaryProvider="true" />
        <EditTextPreference
            app:icon="@drawable/ic_baseline_airplanemode_active_24"
            app:key="serverHost"
            app:title="@string/http_host"
            app:useSimpleSummaryProvider="true" />
        <EditTextPreference
            app:icon="@drawable/ic_baseline_format_align_left_24"
            app:key="serverPath"
            app:title="@string/http_path"
            app:useSimpleSummaryProvider="true" />
        <EditTextPreference
            app:icon="@drawable/ic_file_file_upload"
            app:key="serverUploadSpeed"
            app:title="@string/hysteria_upload_mbps"
            app:useSimpleSummaryProvider="true" />
        <EditTextPreference
            app:icon="@drawable/ic_baseline_download_24"
            app:key="serverDownloadSpeed"
            app:title="@string/hysteria_download_mbps"
            app:useSimpleSummaryProvider="true" />
        <EditTextPreference
            app:icon="@drawable/ic_settings_password"
            app:key="serverPassword"
            app:title="@string/password"
            app:useSimpleSummaryProvider="true" />
        <EditTextPreference
            app:icon="@drawable/ic_baseline_format_align_left_24"
            app:key="serverMekyaKcpSeed"
            app:title="@string/kcp_seed"
            app:useSimpleSummaryProvider="true" />
        <com.takisoft.preferencex.SimpleMenuPreference
            app:defaultValue="none"
            app:entries="@array/kcp_quic_headers_entry"
            app:entryValues="@array/kcp_quic_headers_value"
            app:icon="@drawable/ic_baseline_texture_24"
            app:key="serverMekyaKcpHeaderType"
            app:title="@string/header_type"
            app:useSimpleSummaryProvider="true" />
        <EditTextPreference
            app:icon="@drawable/ic_baseline_airplanemode_active_24"
            app:key="serverMekyaUrl"
            app:title="@string/url"
            app:useSimpleSummaryProvider="true" />
        <com.takisoft.preferencex.SimpleMenuPreference
            app:entries="@array/transport_layer_encryption_entry"
            app:entryValues="@array/transport_layer_encryption_value"
            app:icon="@drawable/ic_baseline_layers_24"
            app:key="serverSecurity"
            app:title="@string/security"
            app:useSimpleSummaryProvider="true" />
    </PreferenceCategory>

    <PreferenceCategory
        app:key="serverSecurityCategory"
        app:title="@string/security_settings">
        <EditTextPreference
            app:icon="@drawable/ic_action_copyright"
            app:key="serverSNI"
            app:title="@string/sni"
            app:useSimpleSummaryProvider="true" />
        <EditTextPreference
            app:dialogMessage="@string/one_per_line"
            app:icon="@drawable/ic_baseline_legend_toggle_24"
            app:key="serverALPN"
            app:title="@string/alpn"
            app:useSimpleSummaryProvider="true" />
        <EditTextPreference
            app:icon="@drawable/ic_baseline_vpn_key_24"
            app:key="serverCertificates"
            app:title="@string/certificates"
            app:useSimpleSummaryProvider="true" />
        <EditTextPreference
            app:dialogMessage="@string/one_per_line"
            app:icon="@drawable/ic_baseline_push_pin_24"
            app:key="serverPinnedCertificateChain"
            app:title="@string/pinned_peer_certificate_chain_sha256"
            app:useSimpleSummaryProvider="true" />
        <SwitchPreference
            app:icon="@drawable/ic_notification_enhanced_encryption"
            app:key="serverAllowInsecure"
            app:summary="@string/allow_insecure_sum"
            app:title="@string/allow_insecure" />
        <com.takisoft.preferencex.SimpleMenuPreference
            app:entries="@array/utls_entry"
            app:entryValues="@array/utls_value"
            app:icon="@drawable/ic_baseline_fingerprint_24"
            app:key="serverUTLSFingerprint"
            app:title="@string/utls_fingerprint"
            app:useSimpleSummaryProvider="true" />
        <EditTextPreference
            app:icon="@drawable/ic_baseline_security_24"
            app:key="serverEchConfig"
            app:title="@string/ech_config"
            app:useSimpleSummaryProvider="true" />
        <EditTextPreference
            app:icon="@drawable/ic_baseline_nfc_24"
            app:key="serverEchDohServer"
            app:title="@string/ech_doh_server"
            app:useSimpleSummaryProvider="true" />
        <EditTextPreference
            app:icon="@drawable/ic_baseline_vpn_key_24"
            app:key="serverRealityPublicKey"
            app:title="@string/reality_public_key"
            app:useSimpleSummaryProvider="true" />
        <EditTextPreference
            app:icon="@drawable/ic_baseline_person_24"
            app:key="serverRealityShortId"
            app:title="@string/reality_short_id"
            app:useSimpleSummaryProvider="true" />
        <com.takisoft.preferencex.SimpleMenuPreference
            app:entries="@array/reality_fingerprint_entry"
            app:entryValues="@array/reality_fingerprint_value"
            app:icon="@drawable/ic_baseline_fingerprint_24"
            app:key="serverRealityFingerprint"
            app:title="@string/reality_fingerprint"
            app:useSimpleSummaryProvider="true" />
    </PreferenceCategory>

    <PreferenceCategory
        app:key="serverWsCategory"
        app:title="@string/cag_ws">
        <EditTextPreference
            app:defaultValue="0"
            app:icon="@drawable/ic_baseline_compare_arrows_24"
            app:key="serverWsMaxEarlyData"
            app:title="@string/ws_max_early_data"
            app:useSimpleSummaryProvider="true" />

        <EditTextPreference
            app:icon="@drawable/ic_baseline_stream_24"
            app:key="serverEarlyDataHeaderName"
            app:title="@string/early_data_header_name"
            app:useSimpleSummaryProvider="true" />

        <SwitchPreference
            app:icon="@drawable/ic_baseline_texture_24"
            app:key="serverWsBrowserForwarding"
            app:summary="@string/ws_browser_forwarding_sum"
            app:title="@string/ws_browser_forwarding" />
    </PreferenceCategory>

    <PreferenceCategory
        app:key="serverShCategory"
        app:title="@string/cag_splithttp">
        <SwitchPreference
            app:icon="@drawable/ic_baseline_texture_24"
            app:key="serverShBrowserForwarding"
            app:title="@string/ws_browser_forwarding" />
        <com.takisoft.preferencex.SimpleMenuPreference
            app:defaultValue="auto"
            app:entries="@array/splithttp_mode_entry"
            app:entryValues="@array/splithttp_mode_value"
            app:icon="@drawable/ic_baseline_stream_24"
            app:key="serverSplithttpMode"
            app:title="@string/splithttp_mode"
            app:useSimpleSummaryProvider="true" />
        <EditTextPreference
            app:icon="@drawable/ic_action_settings"
            app:key="serverSplithttpExtra"
            app:title="@string/splithttp_extra"
            app:useSimpleSummaryProvider="true" />
    </PreferenceCategory>

    <PreferenceCategory
        app:key="serverVMessExperimentsCategory"
        app:title="@string/experimental_settings">
        <SwitchPreference
            app:icon="@drawable/baseline_construction_24"
            app:key="serverVMessExperimentalAuthenticatedLength"
            app:summary="@string/experimental_authenticated_length"
            app:title="AuthenticatedLength" />
        <SwitchPreference
            app:icon="@drawable/baseline_construction_24"
            app:key="serverVMessExperimentalNoTerminationSignal"
            app:summary="@string/experimental_no_termination_signal"
            app:title="NoTerminationSignal" />
    </PreferenceCategory>

    <PreferenceCategory
        app:key="serverPluginCategory"
        app:title="@string/plugin">
        <com.github.shadowsocks.preference.PluginPreference
            app:icon="@drawable/ic_av_playlist_add"
            app:key="serverPlugin"
            app:persistent="false"
            app:title="@string/plugin"
            app:useSimpleSummaryProvider="true" />
        <EditTextPreference
            app:icon="@drawable/ic_action_settings"
            app:key="serverPluginConfigure"
            app:persistent="false"
            app:title="@string/plugin_configure"
            app:useSimpleSummaryProvider="true" />
    </PreferenceCategory>

    <PreferenceCategory
        app:key="serverSsExperimentsCategory"
        app:title="@string/experimental_settings">
        <SwitchPreference
            app:icon="@drawable/baseline_construction_24"
            app:key="serverReducedIvHeadEntropy"
            app:summary="@string/experimental_reduced_iv_head_entropy"
            app:title="ReducedIvHeadEntropy"
            app:useSimpleSummaryProvider="true" />
    </PreferenceCategory>

    <PreferenceCategory
        app:key="serverMuxCategory"
        app:title="@string/mux_settings">
        <SwitchPreference
            app:icon="@drawable/ic_baseline_compare_arrows_24"
            app:key="serverMux"
            app:summary="@string/mux_sum"
            app:title="@string/enable_mux"
            app:useSimpleSummaryProvider="true" />
        <EditTextPreference
            app:defaultValue="8"
            app:icon="@drawable/ic_baseline_low_priority_24"
            app:key="serverMuxConcurrency"
            app:title="@string/mux_concurrency"
            app:useSimpleSummaryProvider="true" />
        <com.takisoft.preferencex.SimpleMenuPreference
            app:entries="@array/packet_encoding_entry"
            app:entryValues="@array/packet_encoding_value"
            app:icon="@drawable/baseline_widgets_24"
            app:key="serverMuxPacketEncoding"
            app:title="@string/packet_encoding"
            app:useSimpleSummaryProvider="true" />
    </PreferenceCategory>

</PreferenceScreen>